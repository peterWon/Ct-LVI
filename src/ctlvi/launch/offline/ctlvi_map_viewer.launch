<launch>
  <param name="/use_sim_time" value="false" />
  <node name="cartographer_map_viwer_node" pkg="cartographer_ros"
      type="cartographer_pbstream_3d_map_publisher_main" args="
          -urdf_filename $(find ctlvi)/urdf/$(arg urdf_name).urdf
          -bag_filename $(arg bag_filename)
          -pbstream_filename $(arg pbstream_filename)
          -rate $(arg rate)
          -tracking_frame 'base_link'"
      output="screen">
  </node>
  <node name="rviz" pkg="rviz" type="rviz" required="true"
    args="-d $(find ctlvi)/rviz/map_viewer.rviz">
  </node>

</launch>